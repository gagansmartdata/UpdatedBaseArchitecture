<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="data"
            type="com.ggn.updatedbasearchitecture.domain.model.Coin" />
        <variable
            name="onClick"
            type="com.ggn.updatedbasearchitecture.presentation.feature_one.CoinListViewModel.RedirectionsFromCoinList" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:onClick="@{() -> onClick.gotoCoinDetails(data)}"
            android:padding="20dp"
            android:textColor="@color/black"
            android:text="@{data.name}"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
